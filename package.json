{
  "name": "devchecklist",
  "displayName": "devchecklist",
  "description": "DevChecklist is a lightweight yet powerful task management extension designed specifically for developers and students working inside Visual Studio Code. It helps you organize daily tasks, track time, and stay productiveâ€”all without leaving your editor.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
  "menus": {
  "view/item/context": [
    {
      "when": "view == devchecklist && viewItem == checklistItem",
      "command": "devchecklist.toggleCheck",
      "group": "inline"
    },
    {
      "when": "view == devchecklist && viewItem == checklistItem",
      "command": "devchecklist.deleteItem",
      "group": "inline"
    }
  ],
  "view/title": [
    {
      "command": "devchecklist.addItem",
      "when": "view == devchecklist",
      "group": "navigation"
    }
  ]
},
     "views": {
      "explorer": [
        {
          "id": "devchecklist",
          "name": "Dev Checklist",
          "icon": "media/icons/checked.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "devchecklist.addItem",
        "title": "Add Checklist Item"
      },
      {
        "command": "devchecklist.toggleCheck",
        "title": "Toggle Task Completion"
      },
      {
        "command": "devchecklist.deleteItem",
        "title": "Delete Checklist Item"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
