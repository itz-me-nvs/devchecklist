{
  "name": "devchecklist",
  "displayName": "devchecklist",
  "description": "DevChecklist is a lightweight yet powerful task management extension designed specifically for developers and students working inside Visual Studio Code. It helps you organize daily tasks, track time, and stay productiveâ€”all without leaving your editor.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
     "viewsContainers": {
    "activitybar": [
      {
        "id": "devchecklistContainer",
        "title": "Dev Checklist",
        "icon": "media/icons/circle-check.svg"
      }
    ]
  },
  "views": {
    "devchecklistContainer": [
      {
        "id": "devchecklistView",
        "name": "Checklist",
        "icon": "media/icons/circle-check.svg"
      }
    ]
  },
 "menus": {
  "view/title": [
    {
      "command": "devchecklist.addHeader",
      "when": "view == devchecklistView",
      "group": "navigation"
    }
  ],
  "view/item/context": [
    {
      "command": "devchecklist.addItem",
      "when": "view == devchecklistView && viewItem == checklistHeader",
      "group": "inline"
    },
    {
      "command": "devchecklist.deleteItem",
      "when": "view == devchecklistView",
      "group": "inline"
    }
    ,
    {
      "command": "devchecklist.addTimer",
      "when": "view == devchecklistView && viewItem != checklistHeader && viewItem == checklistItem",
      "group": "inline"
    },
    {
      "command": "devchecklist.stopTimer",
      "when": "view == devchecklistView && viewItem != checklistHeader && viewItem == checklistItemTimer",
      "group": "inline"
    }

  ]
},
    "commands": [
      {
      "command": "devchecklist.addHeader",
      "title": "Add Header",
       "icon": "$(add)"
      
    },
    {
      "command": "devchecklist.addItem",
      "title": "Add Task",
       "icon": "$(add)"
    },
    {
      "command": "devchecklist.deleteItem",
      "title": "Delete",
       "icon": "$(trash)"
    }
,
    {
      "command": "devchecklist.addTimer",
      "title": "Start Timer",
       "icon": "$(debug-start)"
    },
    {
      "command": "devchecklist.stopTimer",
      "title": "Stop Timer",
       "icon": "$(debug-stop)"
    }
   
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
